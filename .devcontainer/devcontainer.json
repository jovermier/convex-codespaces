{
  "name": "Convex Tutorial",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers-extra/features/pnpm:2": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "privileged": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-json"
      ],
      "settings": {
        "typescript.preferences.includePackageJsonAutoImports": "on"
      }
    }
  },

  "forwardPorts": [3000, 3210, 3211, 5173, 6791, 8187],
  "portsAttributes": {
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "openBrowser"
    },
    "3000": {
      "label": "Vite Prod Server",
      "onAutoForward": "notify"
    },
    "6791": {
      "label": "Self-hosted Convex Dashboard",
      "onAutoForward": "notify"
    },
    "3210": {
      "label": "Self-hosted Convex Cloud Origin",
      "onAutoForward": "notify"
    },
    "3211": {
      "label": "Self-hosted Convex Site Origin",
      "onAutoForward": "notify"
    },
    "8187": {
      "label": "Convex Dev Server",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "pnpm install && chmod +x setup-codespaces.sh",
  "postStartCommand": "./setup-codespaces.sh",
  "remoteUser": "node"
}
