{
  "name": "convex-tutorial",
  "version": "0.0.0",
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:codespaces": "npm-run-all --parallel dev:backend dev:frontend:codespaces",
    "build": "tsc && vite build",
    "dev:backend": "convex dev",
    "dev:frontend": "vite --open",
    "dev:frontend:codespaces": "vite --host",
    "predev": "convex dev --once",
    "docker:up": "docker-compose --env-file .env.docker up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:dashboard": "echo 'Dashboard available at http://localhost:6791'",
    "docker:generate-admin-key": "docker-compose exec backend ./generate_admin_key.sh",
    "self-hosted:setup": "./setup-self-hosted.sh",
    "self-hosted:setup-manual": "pnpm run docker:up && echo 'Waiting for backend to start...' && sleep 10 && pnpm run docker:generate-admin-key",
    "self-hosted:dev": "npm-run-all --sequential docker:up deploy-functions dev:frontend",
    "self-hosted:stop": "docker-compose down",
    "convex:update": "pnpm install convex@latest",
    "deploy-functions": "sleep 1 && convex dev --once"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.2",
    "convex": "1.24.8",
    "prettier": "3.5.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.0",
    "@types/node": "^18.17.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "npm-run-all2": "^7.0.0",
    "typescript": "~5.0.3",
    "vite": "^5.4.12"
  }
}
